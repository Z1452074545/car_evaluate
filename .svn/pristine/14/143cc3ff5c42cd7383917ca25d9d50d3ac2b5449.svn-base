.car_type_pop {
    /* max-width: 750px; */
    width: 100%;
    height: 100%;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    /* left: 50%;
    margin-left: -207px; */
}

.mileage {
    width: 40%;
}

.auth_code_c {
    width: 40%;
    height: 100%;
    margin-left: 14.5%;
}

.auth_code_r {
    width: 12%;
    height: 25px;
    /* background: #4798f4; */
    line-height: 25px;
    text-align: center;
    border-radius: 5px;
    font-size: 14px !important;
    margin: 2px 5px 0 0;
    color: #fff;
}

.auth_code_r input {
    width: 100%;
    height: 100%;
    margin-top: -10px;
    appearance: none;
    outline: none;
    border: none;
    text-align: center;
    background: #4798f4;
    /* line-height: 25px; */
    text-align: center;
    border-radius: 5px;
    font-size: 14px !important;
    margin: 8px 5px 0 0;
    color: #fff;
}

.code_back {
    background: #ccc !important;
}

.footer {
    margin-top: 10px;
    width: 100%;
    height: 110px;
}

.footer img {
    width: 100%;
    height: 100%;
}

.evaluate {
    width: 100%;
    height: 60px;
    box-sizing: border-box;
    padding: 0 5%;
    margin-top: 40px;
}

.but_evaluate {
    width: 100%;
    height: 60px;
    background: #4597f4;
    border-radius: 5px;
    box-shadow: 2px 2px 2px #ccc;
    text-align: center;
    color: #fff;
    line-height: 60px;
    font-size: 22px;
}

.but_buyCars {
    width: 100%;
    height: 45px;
    background: #4597f4;
    border-radius: 5px;
    box-shadow: 2px 2px 2px #ccc;
    text-align: center;
    color: #fff;
    line-height: 45px;
    font-size: 22px;
    margin-top: 20px;
    margin-bottom: 0.2rem;
}

