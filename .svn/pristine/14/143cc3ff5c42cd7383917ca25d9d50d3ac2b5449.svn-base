* {
    touch-action: none;
}

html,
body {
    /* font-size: 0.24rem; */
    width: 100%;
    height: 100%;
    background: rgba(243, 245, 248, 1);
}

.max_width {
    max-width: 750px;
    margin: 0 auto;
}

.banner {
    width: 100%;
    height: 210px;
    background: #fff;
    overflow: hidden;
}

.banner_box {
    width: 93%;
    height: 170px;
    margin: 0 auto;
    margin-top: 20px;
}

.banner_box img {
    width: 100%;
    height: 100%;
}

/* .max_width div{
