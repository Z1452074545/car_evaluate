@keyframes gundong {
    from {
        margin-left: 0px;
    }

    to {
        margin-left: -300px;
    }
}

.max_width_cont input {
    width: 100%;
    font-size: 18px;
    appearance: none;
    outline: none;
    border: 0 none;
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.max_width_right {
    font-size: 30px !important;
    color: #ccc;
    float: right;
}

