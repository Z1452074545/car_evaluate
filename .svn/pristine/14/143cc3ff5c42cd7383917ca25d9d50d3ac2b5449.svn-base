.region {
    width: 100%;
    height: 55px;
    line-height: 55px;
    /* margin-top: 5px; */
    background: #fff;
    border-bottom: 1px solid #ccc;
}

.noe_region {
    margin-top: 10px;
}

.max_width_left {
    float: left;
    margin-left: 5%;
    font-size: 19px;
}

#but_car_type {
    margin-left: 5%;
    width: 60%;

}

