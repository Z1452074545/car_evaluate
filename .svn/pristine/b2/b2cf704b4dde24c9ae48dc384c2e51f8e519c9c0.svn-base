body,html{
    background: #fff;
}
.hot_img{
    width: 100%;
    height: 4rem;
    background: url("../images/Rectangle.png");
    background-size:100% 100%; 
    position: relative;
}
.title{
    width: 100%;
    height: 1rem;
    text-align: center;
    line-height: 1rem;
    font-size: 20px;
    color: #fff;
    position: relative;
}
.title span{
    display: block;
    position: absolute;
    width: 60px;
    top: 5px;
    left: 5px;
    line-height: 0.9rem;
    font-size: 18px;
    color: #fff;
    
}
.car_hots{
    width: 95%;
    height: 3.5rem;
    background: #fff;
    position: absolute;
    top: 1rem;
    left: 50%;
    margin-left: -47.5%;
    box-shadow:0px 2px 12px 0px rgba(0,0,0,0.14);
    border-radius: 10px;
}
.blank_box{
    width: 100%;
    height: 1rem;
    background: #fff;
}
.car_hots_son{
    float: left;
    width: 25%;
    height: 50%;
    box-sizing: border-box;
    background: #fcfcfc;
    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}
.car_hots_son:nth-child(1){
    border-radius: 10px 0 0 0; 
}
.car_hots_son:nth-child(4){
    border-right: none !important;
    border-radius: 0 10px 0 0; 
}
.car_hots_son:nth-child(5){
    border-bottom: none !important;
    border-radius: 0 0 0 10px; 
}
.car_hots_son:nth-child(6){
    border-bottom: none !important;
}
.car_hots_son:nth-child(7){
    border-bottom: none !important;
}
.car_hots_son:nth-child(8){
    border-bottom: none !important;
    border-radius: 0 0 10px 0; 
}
.car_m_img{
    width: 60px;
    height: 60px;
    margin: 0 auto;
}
.car_m_img img{
    width: 100%;
    height: 100%;
}
.car_m_txt{
    width: 100%;
    height: 0.5rem;
    font-size: 18px;
    text-align: center;
}
.car_all{
    width: 100%;
    /* height: 8rem; */
    background: rgba(243,245,248,1);
    margin-top: 45px;
}
.car_title{
    width: 90%;
    height: 0.6rem;
    text-align: left;
    line-height: 0.6rem;
    font-weight: 500;
    font-size: 18px;
    margin: 0 auto;
}
.car_brand{
    width: 100%;
    /* height: 3rem; */
    background: #fff;
}
.car_brand_son{
    width: 100%;
    height: 1rem;
}

.car_brand_son_left{
    float: left;
    width: 40px;
    height: 40px;
    margin: 9px 0 0 10px;
}
.car_brand_son_left img{
    display: block;
    width: 100%;
    height: 100%;
}
.car_brand_son_cont{
    width: 85%;
    height: 100%;
    float: right;
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
}
.son_cont_txt{
    float: left;
    width: 88%;
    height: 100%;
    font-size: 20px;
    line-height: 1rem;
}
.son_cont_jiantou{
    float: left;
    width: 12px;
    height: 24px;
    margin: 18px 0 0 15px;
}
.son_cont_jiantou img{
    display: block;
    width: 100%;
    height: 100%;
}
/* 车系 */
.series_title{
    width: 100%;
    height: 0.8rem;
    background: #368bfa;
    font-size: 20px;
    text-align: center;
    line-height: 0.8rem;
    color: #fff;
    position: relative;
}
.series_title span{
    display: block;
    position: absolute;
    left: 10px;
    height: 0.8rem;
    font-size: 18px;
    color: #fff;
    line-height: 0.83rem;
}
.series_all_son{
    width: 100%;
    height: 0.8rem;
    padding-left:10px; 
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
    font-size: 18px; 
    line-height: 0.8rem;

}
.carModel_title{
    width: 100%;
    height: 0.8rem;
    background: #368bfa;
    font-size: 20px;
    text-align: center;
    line-height: 0.8rem;
    color: #fff;
    position: relative;
}
.carModel_title span{
    display: block;
    position: absolute;
    left: 10px;
    height: 0.8rem;
    font-size: 18px;
    color: #fff;
    line-height: 0.83rem;
}
.carModel_all_title{
    width: 100%;
    height: 0.6rem;
    background: #fafafa;
    font-size: 18px;
    line-height: 0.6rem;
    box-sizing: border-box;
    padding-left: 10px;
}
.carModel_all_son{
    width: 100%;
    height: 0.8rem;
    background: #fff;
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
    font-size: 16px;
    padding-left: 10px;
    line-height: 0.8rem;
}